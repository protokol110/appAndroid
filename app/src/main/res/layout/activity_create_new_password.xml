<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.pass.createNewPasswordActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:gravity="center"
        android:textColor="@color/main_text"
        android:text="ПРИДУМАЙТЕ ПАРОЛЬ"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="341dp"
        android:layout_height="38dp"
        android:gravity="center"
        android:textColor="#B1B3D1"
        android:textSize="15sp"
        android:text="В целях безопасности ваш пароль должен состоять из 6 или более символов"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.03" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:background="@drawable/edit_text_background"
        android:hint="Пароль"
        android:paddingLeft="12dp"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.102" />

   <CheckBox
       android:id="@+id/checkBoxRememberPassword"
       android:layout_width="173dp"
       android:layout_height="38dp"
       android:layout_marginTop="40dp"
       android:scaleX="1.2"
       android:scaleY="1.2"
       android:text="Запомнить пароль"
       android:textColor="#B1B3D1"
       android:textSize="15sp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/purple_500"
       app:layout_constraintHorizontal_bias="0.277"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/passwordInput"
       app:layout_constraintVertical_bias="0.0" />

   <Button
        android:id="@+id/buttonSendPassword"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/purple_500"
        android:text="Далее"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxRememberPassword"
        app:layout_constraintVertical_bias="0.103" />
</androidx.constraintlayout.widget.ConstraintLayout>